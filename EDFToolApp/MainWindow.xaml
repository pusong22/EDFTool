<Window x:Class="EDFToolApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDFToolApp"
        xmlns:vw="clr-namespace:EDFToolApp.View" 
        xmlns:vm="clr-namespace:EDFToolApp.ViewModel" 
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        mc:Ignorable="d"
        Title="EDFToolApp" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--menu bar-->
        <Menu Grid.Row="0" 
              Background="DeepSkyBlue"
              Margin="5"
              FontSize="14">
            <MenuItem Header="File">
                <MenuItem Header="Open Edf File"
                          Command="{Binding OpenEdfFileCommand}"/>
                <MenuItem Header="Close"
                          Command="{Binding CloseEdfFileCommand}"/>
            </MenuItem>
        </Menu>

        <!--tool bar-->

        <!--main-->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Signal List-->
            <Border Grid.Column="0" 
                    Margin="5" 
                    BorderBrush="Gray" 
                    BorderThickness="2">
                <vw:SignalSelectorView 
                    DataContext="{Binding SignalSelectorViewModel}"/>
            </Border>

            <Border Grid.Column="1"
                    Margin="5"
                    BorderBrush="Gray"
                    BorderThickness="2">
                <vw:ChartView
                    DataContext="{Binding ChartViewModel}" />
            </Border>
        </Grid>

        <!--status-->
        <StatusBar Grid.Row="3"
                   Background="PaleVioletRed"/>
    </Grid>

</Window>
