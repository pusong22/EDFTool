<UserControl x:Class="EDFToolApp.View.SignalSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:EDFToolApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Grid>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadFakeSignalsCommand}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0"
                      Margin="5"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Signals}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Label}" 
                                IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <WrapPanel Grid.Row="1">
            <Button Content="全选" Command="{Binding SelectAllCommand}" Margin="2"/>
            <Button Content="清除" Command="{Binding ClearAllCommand}" Margin="2"/>
            <Button Content="保存组合" Command="{Binding SavePresetCommand}" Margin="2"/>
            <Button Content="加载组合" Command="{Binding LoadPresetCommand}" Margin="2"/>
        </WrapPanel>
    </Grid>
</UserControl>
