<Window x:Class="EDFToolApp.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:EDFToolApp"
        mc:Ignorable="d"
        Title="Startup Window" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="commonListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             Margin="{TemplateBinding Margin}"
                             Padding="{TemplateBinding Padding}">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!--<Style.Triggers>
             <Trigger Property="IsMouseOver" Value="True">
                 <Setter Property="Background" Value="Red"/>
             </Trigger>
         </Style.Triggers>-->
        </Style>

        <DataTemplate x:Key="RecentFileItemTemplate">
            <Button Background="Transparent"
                 BorderThickness="0"
                 HorizontalContentAlignment="Stretch"
                 HorizontalAlignment="Stretch"
                 Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                 CommandParameter="{Binding}">
                <StackPanel>
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                Text="{Binding Title}" 
                                FontWeight="Bold" 
                                FontSize="14"/>
                        <TextBlock Grid.Column="1" 
                                Text="{Binding AccessedTime, StringFormat='{}{0:yyyy/MM/dd HH:mm}'}" 
                                HorizontalAlignment="Right" 
                                FontSize="10" 
                                Foreground="Gray"/>
                    </Grid>
                    <TextBlock Text="{Binding SubTitle}" Foreground="Gray" FontSize="10"/>
                </StackPanel>
            </Button>
        </DataTemplate>

        <DataTemplate x:Key="ActionItemTemplate">
            <Button Background="Transparent"
                 BorderThickness="0"
                 Command="{Binding DataContext.BrowserFileCommand, RelativeSource={RelativeSource AncestorType=ListBox}}">
                <StackPanel>
                    <TextBlock Text="{Binding Title}" Foreground="DodgerBlue" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding Description}" Foreground="Gray" FontSize="12"/>
                </StackPanel>
            </Button>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadRecentFilesCommand}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <!-- Recent Files Panel -->
        <ScrollViewer Grid.Column="0" Margin="10" 
                   VerticalScrollBarVisibility="Auto"
                   HorizontalScrollBarVisibility="Disabled">
            <ListBox ItemsSource="{Binding RecentFiles}" 
                  BorderThickness="0"
                  SelectionMode="Single"
                  ItemContainerStyle="{StaticResource commonListBoxItemStyle}"
                  ItemTemplate="{StaticResource RecentFileItemTemplate}"/>
        </ScrollViewer>

        <!-- Get Started Panel -->
        <ScrollViewer Grid.Column="1" Margin="10" 
                   VerticalScrollBarVisibility="Auto"
                   HorizontalScrollBarVisibility="Disabled">
            <ListBox ItemsSource="{Binding ActionItems}"
                  BorderThickness="0"
                  SelectionMode="Single"
                  ItemContainerStyle="{StaticResource commonListBoxItemStyle}"
                  ItemTemplate="{StaticResource ActionItemTemplate}"/>
        </ScrollViewer>
    </Grid>
</Window>
